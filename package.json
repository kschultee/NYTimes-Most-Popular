{
  "version": "1.0.0",
  "private": true,
  "eslintIgnore": ["bundle.js"],
  "scripts": {
    "lint": "run-p lint:*",
    "lint:html": "htmlhint ./**/*.html",
    "lint:css": "stylelint ./**/*.css",
    "lint:js": "eslint ./**/*.js",
    "test": "npm run lint",
    "precommit": "npm test",
    "transform": "browserify main.js -t babelify -o bundle.js",
    "watch": "watchify main.js -vd -t babelify -o bundle.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "eslint": "^4.5.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-node": "5.1.1",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-react": "7.3.0",
    "eslint-plugin-standard": "3.0.1",
    "htmlhint": "0.9.13",
    "husky": "0.14.3",
    "npm-run-all": "4.1.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "stylelint": "8.0.0",
    "stylelint-config-standard": "17.0.0"
  },
  "dependencies": {
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "watchify": "^3.11.0"
  }
}
